<h1>Listing ranks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Ordering</th>
    <th>Preferred name</th>
    <th>Display parent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ranks.each do |rank| %>
  <tr>
    <td><%= rank.name %></td>
    <td><%= rank.ordering %></td>
    <td><%= rank.preferred_name %></td>
    <td><%= rank.display_parent %></td>
    <td><%= link_to 'Show', rank %></td>
    <td><%= link_to 'Edit', edit_rank_path(rank) %></td>
    <td><%= link_to 'Destroy', rank, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

