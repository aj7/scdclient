
<div class="span-15">
<% semantic_form_for @user do |f| %>
  <%#= f.error_messages %>

    <% f.inputs do %>
        <%= f.input :username, :input_html => { :size => 60 }  %>
        <%= f.input :email %>
        <%= f.input :password  %>
        <%= f.input :password_confirmation, :as => :password %>
		<%= f.input :roles , :as => :select, :collection => Role.find(:all) %>
		<%= link_to "Create a new role", new_role_path, :id => "create_role" %>

    <% end %>
	
    <%= f.buttons %>

<% end %>

</div>
