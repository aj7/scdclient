
<div class="span-15">
<% semantic_form_for @user do |f| %>
  <%#= f.error_messages %>

    <% f.inputs do %>
        <%= f.input :username, :input_html => { :size => 60 }  %>
        <%= f.input :email %>
        <%= f.input :password  %>
        <%= f.input :password_confirmation, :as => :password %>
    <% end %>
    <%= f.buttons %>

<% end %>
</div>